/* All QComboBox in GUI1 */
QComboBox
{
    background-color: #ddd;
    font-size: 16px;
    color: black;
    border: 1px solid black;
    padding-left: 10px;

}
QComboBox:focus
{
    background-color: #bbb;
    border: 1px solid black;
}
QComboBox:disabled
{
    color: #777;
    border: 1px solid #777;
}
QComboBox::drop-down
{
    subcontrol-orign: content;
    width: 40px;
    border: 0px solid black;
    border-left-width: 1px;
    max-height: 100px;
}
QComboBox::down-arrow
{
    image: url(:qss/assets/images/wedge-down-enabled-black.png);
}
QComboBox QAbstractItemView
{
    font-size: 16px;
    color: black;
    border: 1px solid black;
    background-color: #ddd;
    outline: none;
}
QComboBox QAbstractItemView::item
{
    padding: 10px 0;
}
QComboBox QAbstractItemView::item:selected
{
    background-color: #2990ff;
    color: black;
}
QComboBox QScrollBar:vertical
{
    background: #bbb;
    border-left: 12px solid #ddd;
    border-right: 12px solid #ddd;
    outline: none;
}
QComboBox QScrollBar::handle:vertical
{
    image: url(:/qss/assets/images/handle-bars-light-41x81+20.png);
    margin: -15px;
}
QComboBox QScrollBar::add-line:vertical
{
    border:none;
    outline: none;
}
QComboBox QScrollBar::sub-line:vertical
{
    border:none;
    outline: none;
}



/* QFrame in GUI1 */
QFrame#frame
{
    image: url(:/qss/assets/images/frame-preview.png);
    background-color: #666;
    border: 1px solid black;
    background-position: center;
}

QFrame#frameImage
{
    background-color: rgba(255, 255, 255, 100);
    border: none;
}



/* All QGroupBox in GUI1  */
QGroupBox
{
    border: 1px solid #333;
    color: black;
    border: 1px solid black;
}



/* QTabWidget in GUI1 (Util menu) */
QTabWidget
{
    background-color: #f4f4f4;
    color: black;
    border: none;
}
QTabWidget > QWidget
{
    border: 1px solid black;
    border-right: 0px;
}

QTabBar::tab
{
    width: 40px;
    background-color: #fff;
    font-size: 13px;
    color: black;

    border: 1px solid #aaa;
    border-left: 1px solid black;

    padding: 12.5px 0;
}
QTabBar::tab:selected
{
    width: 40px;
    background-color: #f4f4f4;
    font-size: 13px;
    text-decoration: underline;
    color: black;

    border: 1px solid black;
    border-left: 0px;

    padding: 12.5px 0;
}



