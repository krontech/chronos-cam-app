/* All Widgets except MainWindow */
QWidget#IOSettingsWindow, #keyboard, #keyboardNumeric, #playbackWindow, #ramWindow, #recModeWindow, #RecSettingsWindow, #saveSettingsWindow,
       #triggerDelayWindow, #UtilWindow, #ExtBrowser
{
    background-color: #f4f4f4;
}

QWidget#StatusWindow
{
    background-color: none;
}



/* All Dialogs CamMainWindow/ColorWindow/whiteBalanceDialog */
QDialog
{
    background-color: #f4f4f4;
    color: black;
}



/* BUTTON */
/* QPushButton on CamMainWindow/ColorWindow/whiteBalanceDialog */
QDialog > QPushButton
{
    font-size: 16px;
    background-color: #f4f4f4;
    color: black;
    border: none;
}
QDialog > QPushButton:pressed
{
    background-color: #ddd;
    border: none;
}
QDialog > QPushButton:disabled
{
    color: #777;
    border: none;
}



/* QPushButton for keyboard*/
QWidget#keyboard > QPushButton
{
    border: 1px solid black;
}

/* QPushButton (characters) on keyboardNumeric */
QWidget#keyboardNumeric > QPushButton
{
    border: 1px solid black;
}
/* Direction buttons look better without border */
QWidget#keyboardNumeric > QPushButton#left
{
    border: none;
}
QWidget#keyboardNumeric > QPushButton#right
{
    border: none;
}
QWidget#keyboardNumeric > QPushButton#up
{
    border: none;
}
QWidget#keyboardNumeric > QPushButton#down
{
    border: none;
}

/* QPushButton of Other Widgets in GUI1 */
QPushButton
{
    font-size: 16px;
    background-color: #ddd;
    color: black;
    border: 1px solid black;
}
QPushButton:pressed
{
    background-color: #bbb;
    border: 1px solid black;
}
QPushButton:disabled
{
    color: #777;
    border: #777;
}
QPushButton:focus
{
    background-color: #bbb;
    outline: none;

}



/* All QRadioButton in GUI1 */
QRadioButton
{
    /* Content */
    font-size: 16px;
    color: black;
    border: none;
    outline: none;
    /* Space between indicator and content */
    spacing: 10px;
}
QRadioButton:disabled
{
    color: #777;
    border: none;
}
/* Indicator Images */
QRadioButton::indicator
{
    width:  35px;
    height: 35px;
}
/* Unchecked */
QRadioButton::indicator::unchecked
{
    image: url(:/qss/assets/images/radio-button-unchecked-black.png);
}
QRadioButton::indicator::unchecked:focus
{
    image: url(:/qss/assets/images/radio-button-unchecked-focus-black.png);
}
/* Checked */
QRadioButton::indicator::checked
{
    image: url(:/qss/assets/images/radio-button-checked-black.png);
}
QRadioButton::indicator::checked:focus
{
    image: url(:/qss/assets/images/radio-button-checked-focus-black.png);
}



/* All Label in GUI1 */
/* TO DO: font size may not be suitable for all widgets? */
QLabel
{
    font-size: 16px;
    color: black;
    border: none;
}

QLabel#lblCurrent
{
    color:  rgb(54, 26, 176);
}

QLabel#lblNetStatus
{
    font-size: 15px;
}



/* All CheckBox in GUI1 */
QCheckBox
{
    /* Content */
    font-size: 16px;
    color: black;
    border: none;
    outline: none;
    /* Space between indicator and content */
    spacing: 10px;
}
QCheckBox:disabled
{
    color: #777;
    border: none;
}
/* The Box(indicator) */
QCheckBox:indicator
{
    width:  35px;
    height: 35px;
    background-color: #ddd;
}
/* unchecked indicator, representing by image */
QCheckBox::indicator:unchecked
{
    image: url(:/qss/assets/images/checkbox-unchecked-black.svg);
}
QCheckBox::indicator:unchecked:focus
{
    image: url(:/qss/assets/images/checkbox-unchecked-focus-black.png);
}
/* checked indicator, representing by image */
QCheckBox::indicator:checked
{
    image: url(:/qss/assets/images/checkbox-checked-black.svg.png);
}
QCheckBox::indicator:checked:focus
{
    image: url(:/qss/assets/images/checkbox-checked-focus-black.png);
}



/* SLIDER */
/* QSlider in GUI1 */
QSlider::groove:vertical
{
    background: #ddd;
    width: 15px;
    border: 1px solid black;
    border-radius: 7.5px;
    margin: 13px;
}

QSlider::handle:vertical
{
    image: url(:/qss/assets/images/handle-bars-light-41x81+20.png);
    margin: -20px -200px;
    padding: -1px;
 }



/* TriggweSlider of Trigger Delay */
QSlider::groove:horizontal
{
    background: #ddd;
    height: 15px;
    border: 1px solid black;
    border-radius: 7.5px;
    margin: 13px;
}
QSlider::handle:horizontal
{
    image: url(:/qss/assets/images/handle-bars-light-81x41+20.png);
    margin: -200px -20px;
    padding: -1px;
}



