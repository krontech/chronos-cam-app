{
    background-color: #bbb;
    border: 1px solid black;
}
QProgressDialog > QPushButton:disabled
{
    color: #777;
    border: 1px solid #777;
}



QProgressBar {
    border: 2px solid black;
    border-radius: 5px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #00ff00;
    border: 1px solid #fff;
    border-radius: 3px;
}


